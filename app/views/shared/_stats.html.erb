<%# Listing 11.20 %>
<% @user ||= current_user %> <%# does nothing on profile pages; set @user = current_user on home page %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat"> <%# CSS id for Ajax - later, in Section 11.2.5 %>
      <%= @user.followed_users.count %> <%# calculated through associations - cf. microposts %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat"> 
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>