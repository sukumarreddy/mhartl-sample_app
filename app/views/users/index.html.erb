<% provide(:title, 'All users') %>
<h1>All users</h1>

<%# Listing 9.34 - "The will_paginate method is a little magical" %>
<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 52 %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

